{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .btn-width { width: 100% }
</style>

<div class="container" style="padding-top: 50px">
    <h1>Bancos</h1>
    </br>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Cuenta</th>
                <th>Activo</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody id="bancos"></tbody>
    </table>
    </br>
    </br>
    <form id="formulario-agregar">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <button type="button" id="agregar" data-role="agregar" class="btn btn-info btn-width">Agregar Banco</button>
                </div>
            </div>
        </div>
        </br>
        <div id="formularios-div" style="padding: 0; display: none">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="nombre">Nombre Banco</label>
                        <input type="text" class="form-control nombre" id="agregar-nombre" name="agregar-nombre">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="cuenta">Numero Cuenta</label>
                        <input type="text" class="form-control cuenta" id="agregar-cuenta" name="agregar-cuenta">
                    </div>
                </div>
                <br>
                <div class="col-md-2">
                    <div class="form-group">
                        <button type="button" class="btn btn-danger glyphicon glyphicon-trash" data-role="esconder-formulario"></button>
                    </div>
                </div>
            </div>
            </br>
            <div class="row">
                <div class="col-md-4">
                    <button type="button" id="guardar" class="btn btn-success btn-width">Guardar</button>
                </div>
            </div>
        </div>
    </form>

    <!-- Modal Editar -->
    <div id="modal-editar" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Editar Banco</h4>
                </div>
                <form id="formulario-editar">
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" id="nombre" class="form-control" name="nombre">
                        </div>
                        <div class="form-group">
                            <label>Cuenta</label>
                            <input type="text" id="cuenta" class="form-control" name="cuenta">
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">Activo</label></br>
                            <input type="checkbox" id="activo" class="form-check-input" value="activo" name="activo[]">
                        </div>
                        <input type="hidden" id="editar-id" class="form-control" name="id">
                    </div>
                    <div class="modal-footer">
                        <a href="#" id="save" class="btn btn-primary" data-dismiss="modal">Actualizar</a>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Eliminar -->   
    <div id="modal-eliminar" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Eliminar Banco</h4>
                </div>
                <div class="modal-body">
                    <h4>Â¿Esta seguro que desea eliminar este banco?</h4>
                    </br>
                    <div class="row">
                        <div class="col-md-2">
                            <label>Banco:</label>
                        </div>
                        <div class="col-md-4">
                            <label id="eliminar-nombre"></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label>Cuenta:</label>
                        </div>
                        <div class="col-md-4">
                            <label id="eliminar-cuenta"></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label>Activo:</label>
                        </div>
                        <div class="col-md-3">
                            <label id="eliminar-activo"></label>
                        </div>
                    </div>
                    <form id="formulario-eliminar">
                        <input type="hidden" id="eliminar-id" class="form-control" name="id">
                    </form>
                </div>
                <div class="modal-footer">
                     <a href="#" id="delete" class="btn btn-danger" data-dismiss="modal">Borrar</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset('build/js/banco.js') }}"></script>
{% endblock %}